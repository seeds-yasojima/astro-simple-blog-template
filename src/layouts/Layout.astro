---
interface Props {
  title: string;
  isHome?: boolean;
}

const { title, isHome = false } = Astro.props;
const headerTitle = "Hello Simple Astro Blog";
import { cn } from "@/lib/utils";
import "@/styles/index.css";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- OGP -->
    <meta name="og:title" content={title} />
    <meta name="og:description" content="Astro製のシンプルなブログ" />
    <meta name="og:image" content="" />
    <!-- <meta name="og:url" content="" /> -->
    <meta name="og:site_name" content={headerTitle} />
    <meta name="og:locale" content="ja_JP" />
    <meta name="og:type" content="blog" />
    <title>{title}</title>
  </head>
  <body class="bg-accent">
    <header class="">
      <div class="container flex h-10 max-w-[1000px] items-center">
        {
          !isHome && (
            <a href="/" class={cn("shrink-0")}>
              <span class="font-bold">{headerTitle}</span>
              <span class="pl-1">&#128640;</span>
            </a>
          )
        }

        <div class="ml-auto hidden space-x-3 md:block">
          <a
            href="/category"
            class="text-sm text-muted-foreground hover:underline"
          >
            カテゴリ一覧
          </a>
          <a
            href="/about"
            class="text-sm text-muted-foreground hover:underline"
          >
            このサイトについて
          </a>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
